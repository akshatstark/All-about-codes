// take all subarray from 0 to R then subtract 0 to L which will give us L to R...

class Solution{
    
    static long countSubarrays(int a[], int n, int L, int R)  
    { 
        int cnt = 0;
        long rCnt = 0;
 // count number of subarrays which are generated by less than R value      
        for (int i = 0; i < n; i++) {
            if (a[i] <= R) {
                cnt++;
                rCnt += cnt;
            } else {
                cnt = 0;
            }
        }
        
// count number of subarrays which are generated by less than L value
        cnt =0;
        long lCnt=0;
        for (int i = 0; i < n; i++) {
            if (a[i] < L) {
                cnt++;
                lCnt += cnt;
            } else {
                cnt = 0;
            }
        }
// remove lCnt from rCnt 
        return rCnt-lCnt;
    } 
}
