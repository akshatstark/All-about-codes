{
    //Function to reverse words in a given string.
    String reverseWords(String S)
    {
        // code here 
        StringBuilder res=new StringBuilder();
        String[] word=S.split("\\.");
        
        for(int i=word.length-1;i>=0;i--){
            res.append(word[i]);
            if(i>0) res.append(".");
        }
        return res.toString();
    }
}
